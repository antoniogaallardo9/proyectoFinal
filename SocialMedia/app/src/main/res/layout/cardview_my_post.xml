<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="UselessParent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageMyPost"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/cover_image"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/textViewTitleMyPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_de_la_publicacion"
                android:maxLines="1"
                android:textColor="@color/dark_blue"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textViewRelativeTimeMyPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hace_0_minutos"
                android:maxLines="1"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:layout_marginTop="3dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewDeleteMyPost"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_cancel"
            android:contentDescription="@string/imagen" />
    </LinearLayout>

</FrameLayout>